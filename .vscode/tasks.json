{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "hxml",
            "file": "build.hxml",
            "problemMatcher": [
                "$haxe"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "generate",
            "type": "shell",
            "command": "./generate.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}